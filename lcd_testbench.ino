void loop(void) {
  if(digitalRead(BUTTON) == 0 && prev_val == 1 && millis() - debounce > DEBOUNCE_TIME){
    prev_val = 0;
    debounce = millis();
    digitalWrite(LED,LOW);
    u8g2.setDrawColor(0);
    u8g2.drawBox(0,0,128,32);
    u8g2.setDrawColor(1);
    u8g2.drawStr(32,20,"Bonjour Bruxelles");
    //  // write something to the internal memory
    Serial.println("PRESS");
  }
  if(digitalRead(BUTTON) == 1 && prev_val == 0 && millis() - debounce > DEBOUNCE_TIME){
    prev_val = 1;
    debounce = millis();
    digitalWrite(LED,HIGH);
    u8g2.setDrawColor(1);
    u8g2.drawBox(0,0,128,32);
    u8g2.setDrawColor(0);
    u8g2.drawStr(32,20,"Bonjour Bruxelles");
    //u8g2.drawStr(32,20,"Wireeo TEST");  // write something to the internal memory
    Serial.println("RELEASE");
  }
  u8g2.sendBuffer();
  delay(100);  
}
